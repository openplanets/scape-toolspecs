<?xml version="1.0" encoding="utf-8"?>
<tool xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://scape-project.eu/tool" xmlns:xlink="http://www.w3.org/1999/xlink" xsi:schemaLocation="http://scape-project.eu/tool schemas/tool-1.1_draft.xsd" schemaVersion="1.1" name="Avidemux" version="1.0.2" homepage="http://avidemux.sourceforge.net/">
	<license name="Apache-2.0" uri="http://opensource.org/licenses/Apache-2.0" type="FLOSS"/>
	<installation>
		<operatingSystem operatingSystemName="Debian">
			<packageManager type="Dpkg">
				<config>avidemux-cli</config>
            <source>deb http://ubapt.opf-labs.org precise main</source>
			</packageManager>
			<dependency name="avidemux-cli">
				<license name="GPL-3.0" uri="http://opensource.org/licenses/GPL-3.0" type="FLOSS"/>
			</dependency>
		</operatingSystem>
	</installation>
	<operations>
		<operation name="digital-preservation-migration-video-avidemux-wmv2mpeg2">
			<description>Converts any WMV to MPEG2</description>
			<command>avidemux2_cli --nogui --load ${input} --save ${output}</command>
			<inputs>
				<input name="input" required="true">
					<description>Reference to input file</description>
				</input>
				<parameter name="params" required="false">
					<description>Additional conversion parameters</description>
				</parameter>
			</inputs>
			<outputs>
				<output name="output" required="true">
					<description>Reference to output file</description>
					<extension>mp4</extension>
				</output>
			</outputs>
		</operation>
	</operations>
</tool>
