<?xml version="1.0" encoding="utf-8" ?>
<tool xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://scape-project.eu/tool tool-1.0_draft.xsd" xmlns="http://scape-project.eu/tool" xmlns:xlink="http://www.w3.org/1999/xlink" schemaVersion="1.0" name="AbiWord" version="1.0.1" homepage="http://www.abisource.com/">
  <installation>
    <dependency operatingSystemName="Debian">abiword</dependency>
    <license type="Apache Licence 2.0">Apache License, Version 2.0</license>
  </installation>
  <otherProperties>
    <property name="cost">0</property>
  </otherProperties>
  <operations>
    <operation name="digital-preservation-migration-office-abiword-doc2pdf">
      <description>Converts Word to PDF</description>
      <command>abiword --to=pdf --to-name=${output} ${input}</command>
      <inputs>
        <input name="input" required="true">
          <description>Reference to input file</description>
        </input>
        <parameter name="params" required="false">
          <description>Additional conversion parameters</description>
        </parameter>
      </inputs>
      <outputs>
        <output name="output" required="true">
          <description>Reference to output file</description>
          <extension>pdf</extension>
        </output>
      </outputs>
    </operation>
  </operations>
</tool>
